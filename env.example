# Database (PostgreSQL)
# ローカル開発用: postgresql://username:password@localhost:5432/database_name
# Heroku用: 自動的に設定されます
DATABASE_URL="postgresql://username:password@localhost:5432/feedback_db"

# AWS S3 Configuration
AWS_REGION="ap-northeast-1"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_S3_BUCKET_NAME="your-bucket-name"

# Next.js Configuration
NODE_ENV="production"
NEXTAUTH_URL="https://your-app-name.herokuapp.com"

# Slack Configuration
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_CHANNEL_ID="C1234567890"

# GitHub API Configuration
# GitHub Personal Access Token with repo access
GITHUB_TOKEN="your-github-personal-access-token"

# Auth Server Configuration
# URL and token for the authentication server that provides project information
AUTH_SERVER_URL="https://auth-suite-2e3c739664f5.herokuapp.com"
AUTH_SERVER_TOKEN="your-auth-server-api-token" 