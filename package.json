{
  "name": "feedback-manager",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "next dev --turbopack -p 3300",
    "dev-dynamic": "./start-dev-dynamic.sh",
    "build": "prisma generate && next build",
    "start": "next start -p ${PORT:-3300}",
    "postinstall": "prisma generate",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "heroku:db-info": "heroku config:get DATABASE_URL",
    "heroku:db-config": "heroku config | grep DATABASE",
    "deploy:setup-s3": "chmod +x deploy-scripts/create-s3-user.sh && ./deploy-scripts/create-s3-user.sh",
    "deploy:fix-s3": "chmod +x deploy-scripts/fix-s3-permissions.sh && ./deploy-scripts/fix-s3-permissions.sh",
    "deploy:fix-s3-user": "chmod +x deploy-scripts/fix-s3-user-permissions.sh && ./deploy-scripts/fix-s3-user-permissions.sh",
    "deploy:configure-s3": "chmod +x deploy-scripts/configure-s3-no-acl.sh && ./deploy-scripts/configure-s3-no-acl.sh",
    "deploy:configure-s3-limited": "chmod +x deploy-scripts/configure-s3-limited.sh && ./deploy-scripts/configure-s3-limited.sh",
    "deploy:test-s3": "chmod +x deploy-scripts/test-s3-upload.sh && ./deploy-scripts/test-s3-upload.sh",
    "deploy:set-env": "node deploy-scripts/set-heroku-env.js",
    "deploy:initial": "chmod +x deploy-scripts/initial-deploy.sh && ./deploy-scripts/initial-deploy.sh",
    "deploy:heroku": "git push heroku main"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.627.0",
    "@aws-sdk/s3-request-presigner": "^3.627.0",
    "@octokit/rest": "^22.0.0",
    "@prisma/client": "^6.10.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.5.0",
    "next": "15.3.3",
    "pg": "^8.12.0",
    "prisma": "^6.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/pg": "^8.11.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "aws-sdk-client-mock": "^4.0.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "jest": "^30.0.0",
    "jest-environment-node": "^30.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5"
  }
}
